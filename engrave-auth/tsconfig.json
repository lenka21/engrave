    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": true,
        "rootDir": "./src/",
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}